@model Project_Passion_BrenoSouza.Models.Grocery

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Grocery</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @* Display name for the Name field *@
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @* Display value for the Name field *@
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @* Display name for the Ingredient.Name field *@
            @Html.DisplayNameFor(model => model.Ingredient.Name)
        </dt>
        <dd class="col-sm-10">
            @* Display value for the Ingredient.Name field *@
            @Html.DisplayFor(model => model.Ingredient.Name)
        </dd>
    </dl>
</div>
<div>
    @* Link to edit the grocery item *@
    <a asp-action="Edit" asp-route-id="@Model.GroceryId">Edit</a> |
    @* Link to navigate back to the grocery list *@
    <a asp-action="Index">Back to List</a>
</div>
